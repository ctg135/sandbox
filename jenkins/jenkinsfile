#!groovy

pipeline {
    agent any
    options {
        timestamps()
    }
    stages {
        stage('Preparations'){
            steps {
                sh 'cd jenkins'
            }
        }
        stage('Docker build'){
            steps{
                sh 'docker build -t test_image .'
            }
        }
        stage('Docker run'){
            steps{
                sh 'docker run --name test_container test_image'
            }
        }
    }
}