#!groovy

pipeline {
    agent any
    options {
        timestamps()
    }
    stages {
        stage('Docker build'){
            steps {
                echo "**** Docker building ****"
                dir('jenkins/'){
                    sh 'docker build -t test_image .'
                }
            }
        }
        stage('Docker run'){
            steps {
                echo "**** Starting container ****"
                sh 'docker run --name test_container test_image'
            }
        }
    }
}